FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 1;

boundaryField
{
    inlet
    {
        type            fixedJump;
        patchType       cyclic;
        jump            uniform 1;
        value           $internalField;
    }
    outlet
    {
        type            fixedJump;
        patchType       cyclic;
        jump            uniform -1;
        value           $internalField;
    }
    wall
    {
        type            fixedValue;
        value           uniform 0;
    }
}

